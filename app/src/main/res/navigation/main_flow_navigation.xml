<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@+id/home_flow_dest">
    <fragment
        android:id="@+id/home_flow_dest"
        android:name="com.example.android.codelabs.navigation.HomeFlowFragment"
        android:label="@string/home"
        tools:layout="@layout/home_flow_fragment">

        <action
            android:id="@+id/next_action"
            app:destination="@id/flow_step_one_dest"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>

    <fragment
        android:id="@+id/deeplink_flow_dest"
        android:name="com.example.android.codelabs.navigation.DeepLinkFlowFragment"
        android:label="@string/deeplink"
        tools:layout="@layout/deeplink_fragment">

        <argument
            android:name="myarg"
            android:defaultValue="Android!"/>
    </fragment>

</navigation>
